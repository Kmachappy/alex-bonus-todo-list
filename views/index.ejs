<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/script.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Todos</title>
</head>
<body>
    <h1> The todo App</h1>
    <% todos.forEach((todo)=>{ %>
        <ul>

            <li class="<%= todo.completed ? 'done' :null%>"><%= todo.text %> </li>
            <form action="/todo/<%=todo._id%>?_method=PUT" method="post">
                <input type="submit" value="task completed" <%=todo.completed ? "disabled" : null %> >
            
            </form>
        </ul>
    <% }) %> 

    <h2> Add a todo</h2>
    <form action="/todo" method="post">
        <input type="text" name="text" placeholder="todo goes here">
        <input type="submit" value="submit">
    </form>
</body>
</html>